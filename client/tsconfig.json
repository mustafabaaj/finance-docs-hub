{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "allowJs": true,
    "jsx": "react-jsx",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/src/App.tsx",
    "src/src/components/HomePage.tsx",
    "src/src/index.tsx"
  ],
  "exclude": ["node_modules"]
}
